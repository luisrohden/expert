<section id="store">
	<div class="container">
		<h2>Store</h2>
		<div class="flex">
			{% for product in products %}
				<div class="product">
					<div class="photo">
						<a href="/view/product/{{product.id}}" title="View {{product.name}}">
							<img src="{{product.photo}}" alt ="{{product.name}}"/>
						</a>
					</div>
					<div class="title">
						<a href="/view/product/{{product.id}}" title="View {{product.name}}">
							{{product.name}}
						</a>
					</div>
					<div class="type">
						type: {{product.type_name}}
					</div>
					<div class="price">
						R$ {{product.price|number_format(2)}}
					</div>
					<div class="viewMore">
						<a href="/view/product/{{product.id}}" title="View {{product.name}}" class="btn">
							View More
						</a>
					</div>
				</div>
			{% endfor%}
		</div>
	</div>	
</section>